<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form-validation PUBLIC "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.0.1//EN" "validator_1_0_1.dtd" >
<form-validation>
<formset>
	<form name="/AddContactSubmit">

			<field property="fname" depends="required">
				<arg0 key="First Name" resource="false" />
			</field>
			
			<field property="lname" depends="required">
				<arg0 key="Last Name" resource="false" />
			</field>
			<field property="email" depends="required,email">
				<arg0 key="Email Id" resource="false" />
			</field>
			<field property="phone" depends="required,long">
				<arg0 key="Phone No" resource="false" />
			</field>
		</form>
		
		<form name="/SearchContactSubmit">

			<field property="email" depends="required,email">
				<arg0 key="Email Id" resource="false" />
			</field>
		</form>
		
		<form name="/UpdateContactSubmit">

			<field property="fname" depends="required">
				<arg0 key="First Name" resource="false" />
			</field>
			
			<field property="lname" depends="required">
				<arg0 key="Last Name" resource="false" />
			</field>
			<field property="email" depends="required,email">
				<arg0 key="Email Id" resource="false" />
			</field>
		</form>
</formset>
</form-validation>
